{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug CV Publishers",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/autonomy/src/cv_publishers.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/autonomy/src:${env:PYTHONPATH}",
                "ROS_PACKAGE_PATH": "${workspaceFolder}/autonomy:${env:ROS_PACKAGE_PATH}"
            },
            "preLaunchTask": "Set ROS Parameters for CV Publishers",
            "args": []
        },
        {
            "name": "Debug CV Publishers (Manual ROS Setup)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/autonomy/src/cv_publishers.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/autonomy/src:${env:PYTHONPATH}",
                "ROS_PACKAGE_PATH": "${workspaceFolder}/autonomy:${env:ROS_PACKAGE_PATH}"
            },
            "args": []
        },
        {

            "name": "Debug CV Publishers in Docker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/catkin_ws/src/hydrus-software-stack"
                }
            ],
            "preLaunchTask": "Start Docker with Debug CV Publishers"
        },
        {
            "name": "Run Tests in Docker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/catkin_ws/src/hydrus-software-stack"
                }
            ],
            "preLaunchTask": "Start Docker Test Mode"
        }
    ]
}
